<div class="w-full max-w-md">
  <div class="bg-neutral-900 border-2 border-neutral-700 p-6 shadow-[4px_4px_0_0_#1a1a1a]">
    <h1 class="text-2xl uppercase tracking-wider text-[#00ff88] mb-2">Set up Outpost</h1>
    <p class="text-sm text-neutral-500">Create your chat instance and admin account.</p>

    <%= form_with model: @account, url: setup_path, class: "mt-6" do |form| %>
      <% if @account.errors.any? || @user.errors.any? %>
        <div class="p-3 bg-red-900/30 border-2 border-red-700 mb-6">
          <% @account.errors.full_messages.each do |message| %>
            <p class="text-red-400 text-sm"><%= message %></p>
          <% end %>
          <% @user.errors.full_messages.each do |message| %>
            <p class="text-red-400 text-sm"><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <fieldset class="mb-6">
        <legend class="text-sm uppercase tracking-wide text-neutral-400 mb-3">Your Chat</legend>
        <div>
          <%= form.label :name, "Chat name", class: "block text-sm text-neutral-400 uppercase tracking-wide" %>
          <%= form.text_field :name, required: true, autofocus: true, placeholder: "e.g. Acme Team", class: "mt-1 w-full px-3 py-2 bg-neutral-800 text-neutral-200 border-2 border-neutral-700 focus:border-[#00ff88] focus:outline-none focus:shadow-[0_0_10px_rgba(0,255,136,0.3)] placeholder:text-neutral-600" %>
        </div>
      </fieldset>

      <%= fields_for :user, @user do |user_form| %>
        <fieldset class="mb-6">
          <legend class="text-sm uppercase tracking-wide text-neutral-400 mb-3">Admin Account</legend>

          <div class="mb-4">
            <%= user_form.label :email_address, class: "block text-sm text-neutral-400 uppercase tracking-wide" %>
            <%= user_form.email_field :email_address, required: true, autocomplete: "email", class: "mt-1 w-full px-3 py-2 bg-neutral-800 text-neutral-200 border-2 border-neutral-700 focus:border-[#00ff88] focus:outline-none focus:shadow-[0_0_10px_rgba(0,255,136,0.3)] placeholder:text-neutral-600" %>
          </div>

          <div class="mb-4">
            <%= user_form.label :password, class: "block text-sm text-neutral-400 uppercase tracking-wide" %>
            <%= user_form.password_field :password, required: true, autocomplete: "new-password", maxlength: 72, class: "mt-1 w-full px-3 py-2 bg-neutral-800 text-neutral-200 border-2 border-neutral-700 focus:border-[#00ff88] focus:outline-none focus:shadow-[0_0_10px_rgba(0,255,136,0.3)]" %>
          </div>

          <div class="mb-4">
            <%= user_form.label :password_confirmation, class: "block text-sm text-neutral-400 uppercase tracking-wide" %>
            <%= user_form.password_field :password_confirmation, required: true, autocomplete: "new-password", maxlength: 72, class: "mt-1 w-full px-3 py-2 bg-neutral-800 text-neutral-200 border-2 border-neutral-700 focus:border-[#00ff88] focus:outline-none focus:shadow-[0_0_10px_rgba(0,255,136,0.3)]" %>
          </div>
        </fieldset>
      <% end %>

      <div>
        <%= form.submit "Initialize", class: "px-4 py-2 bg-[#00ff88] hover:bg-[#00cc6a] text-black font-medium border-2 border-black shadow-[4px_4px_0_0_#000] hover:shadow-[2px_2px_0_0_#000] hover:translate-x-[2px] hover:translate-y-[2px] transition-all cursor-pointer uppercase tracking-wide" %>
      </div>
    <% end %>
  </div>
</div>
