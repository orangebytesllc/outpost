<div class="w-full max-w-md">
  <div class="bg-neutral-900 border-2 border-neutral-700 p-6 shadow-[4px_4px_0_0_#1a1a1a]">
    <h1 class="text-2xl uppercase tracking-wider text-[#00ff88] mb-2">Join <%= @account.name %></h1>
    <p class="text-sm text-neutral-500 mb-6">Create your account to get started.</p>

    <%= form_with model: @user, url: join_path(token: params[:token]), class: "space-y-4" do |form| %>
      <% if @user.errors.any? %>
        <div class="p-3 bg-red-900/30 border-2 border-red-700">
          <% @user.errors.full_messages.each do |message| %>
            <p class="text-red-400 text-sm"><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <div>
        <%= form.label :name, "Your name", class: "block text-sm text-neutral-400 uppercase tracking-wide" %>
        <%= form.text_field :name, required: true, autofocus: true, autocomplete: "name", placeholder: "e.g. Jane Smith", class: "mt-1 w-full px-3 py-2 bg-neutral-800 text-neutral-200 border-2 border-neutral-700 focus:border-[#00ff88] focus:outline-none focus:shadow-[0_0_10px_rgba(0,255,136,0.3)] placeholder:text-neutral-600" %>
      </div>

      <div>
        <%= form.label :email_address, "Email", class: "block text-sm text-neutral-400 uppercase tracking-wide" %>
        <%= form.email_field :email_address, required: true, autocomplete: "email", class: "mt-1 w-full px-3 py-2 bg-neutral-800 text-neutral-200 border-2 border-neutral-700 focus:border-[#00ff88] focus:outline-none focus:shadow-[0_0_10px_rgba(0,255,136,0.3)] placeholder:text-neutral-600" %>
      </div>

      <div>
        <%= form.label :password, "Password", class: "block text-sm text-neutral-400 uppercase tracking-wide" %>
        <%= form.password_field :password, required: true, autocomplete: "new-password", maxlength: 72, class: "mt-1 w-full px-3 py-2 bg-neutral-800 text-neutral-200 border-2 border-neutral-700 focus:border-[#00ff88] focus:outline-none focus:shadow-[0_0_10px_rgba(0,255,136,0.3)]" %>
      </div>

      <div>
        <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm text-neutral-400 uppercase tracking-wide" %>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", maxlength: 72, class: "mt-1 w-full px-3 py-2 bg-neutral-800 text-neutral-200 border-2 border-neutral-700 focus:border-[#00ff88] focus:outline-none focus:shadow-[0_0_10px_rgba(0,255,136,0.3)]" %>
      </div>

      <div class="pt-2">
        <%= form.submit "Join", class: "px-4 py-2 bg-[#00ff88] hover:bg-[#00cc6a] text-black font-medium border-2 border-black shadow-[4px_4px_0_0_#000] hover:shadow-[2px_2px_0_0_#000] hover:translate-x-[2px] hover:translate-y-[2px] transition-all cursor-pointer uppercase tracking-wide" %>
      </div>
    <% end %>

    <div class="mt-6 text-sm text-neutral-500">
      Already have an account?
      <%= link_to "Sign in", new_session_path, class: "text-neutral-400 hover:text-[#00ff88] transition-colors" %>
    </div>
  </div>
</div>
