<div class="w-full max-w-2xl">
  <div class="bg-neutral-900 border-2 border-neutral-700 p-6 shadow-[4px_4px_0_0_#1a1a1a]">
    <% if notice = flash[:notice] %>
      <div class="p-3 bg-[#00ff88]/10 border-2 border-[#00ff88]/50 mb-6">
        <p class="text-[#00ff88] text-sm"><%= notice %></p>
      </div>
    <% end %>

    <% if alert = flash[:alert] %>
      <div class="p-3 bg-red-900/30 border-2 border-red-700 mb-6">
        <p class="text-red-400 text-sm"><%= alert %></p>
      </div>
    <% end %>

    <h1 class="text-2xl uppercase tracking-wider text-[#00ff88] mb-6">Settings</h1>

    <section class="mb-8">
      <h2 class="text-sm uppercase tracking-wide text-neutral-400 mb-4">Invite Link</h2>
      <p class="text-sm text-neutral-500 mb-4">Share this link to invite new users to <%= @account.name %>.</p>
      
      <div class="flex gap-2">
        <input 
          type="text" 
          value="<%= @account.invite_url(host: ENV.fetch('OUTPOST_HOST', request.base_url)) %>" 
          readonly 
          class="flex-1 px-3 py-2 bg-neutral-800 text-neutral-300 border-2 border-neutral-700 text-sm font-mono"
          id="invite-link"
        >
        <button 
          type="button"
          onclick="navigator.clipboard.writeText(document.getElementById('invite-link').value)"
          class="px-4 py-2 bg-neutral-800 hover:bg-neutral-700 text-neutral-200 border-2 border-neutral-600 shadow-[4px_4px_0_0_#333] hover:shadow-[2px_2px_0_0_#333] hover:translate-x-[2px] hover:translate-y-[2px] transition-all cursor-pointer uppercase tracking-wide text-sm"
        >
          Copy
        </button>
      </div>

      <div class="mt-4">
        <%= button_to "Regenerate Link", regenerate_invite_token_settings_path, 
            method: :post,
            class: "px-4 py-2 bg-neutral-800 hover:bg-neutral-700 text-neutral-400 hover:text-neutral-200 border-2 border-neutral-700 text-sm uppercase tracking-wide cursor-pointer transition-colors" %>
      </div>
    </section>

    <section class="mb-8">
      <h2 class="text-sm uppercase tracking-wide text-neutral-400 mb-4">Users</h2>
      
      <div class="border-2 border-neutral-700">
        <% @users.each do |user| %>
          <div class="flex items-center justify-between p-3 border-b-2 border-neutral-700 last:border-b-0">
            <div class="flex-1">
              <span class="text-neutral-200"><%= user.email_address %></span>
              <% if user == Current.user %>
                <span class="text-xs text-neutral-500 ml-2">(you)</span>
              <% end %>
            </div>

            <div class="flex items-center gap-4">
              <div class="flex items-center gap-2" data-controller="toggle" data-toggle-url-value="<%= user_path(user) %>">
                <span class="text-xs text-neutral-500 uppercase">Admin</span>
                <label class="relative inline-block w-10 h-5 <%= user == Current.user ? 'cursor-not-allowed' : 'cursor-pointer' %>">
                  <input 
                    type="checkbox" 
                    class="sr-only peer"
                    <%= "checked" if user.admin? %>
                    <%= "disabled" if user == Current.user %>
                    data-action="change->toggle#toggle"
                  >
                  <% if user == Current.user %>
                    <span class="absolute inset-0 bg-neutral-700 border-2 border-neutral-600"></span>
                    <span class="absolute left-0.5 top-0.5 w-3.5 h-3.5 bg-neutral-500 border border-neutral-600 translate-x-5"></span>
                  <% else %>
                    <span class="absolute inset-0 bg-neutral-700 border-2 border-neutral-600 peer-checked:bg-[#00ff88] peer-checked:border-[#00cc6a] transition-colors"></span>
                    <span class="absolute left-0.5 top-0.5 w-3.5 h-3.5 bg-neutral-400 border border-neutral-500 peer-checked:translate-x-5 peer-checked:bg-black peer-checked:border-black transition-transform"></span>
                  <% end %>
                </label>
              </div>

              <% if user == Current.user %>
                <span class="text-neutral-700 cursor-not-allowed">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                </span>
              <% else %>
                <%= button_to user_path(user), method: :delete, class: "text-neutral-500 hover:text-red-400 transition-colors cursor-pointer" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <div class="pt-6 border-t-2 border-neutral-800">
      <%= link_to "Back", root_path, class: "text-sm text-neutral-500 hover:text-[#00ff88] transition-colors" %>
    </div>
  </div>
</div>
