<div class="w-full max-w-md">
  <div class="bg-neutral-900 border-2 border-neutral-700 p-6 shadow-[4px_4px_0_0_#1a1a1a]">
    <% if alert = flash[:alert] %>
      <div class="p-3 bg-red-900/30 border-2 border-red-700 mb-6">
        <p class="text-red-400 text-sm"><%= alert %></p>
      </div>
    <% end %>

    <% if notice = flash[:notice] %>
      <div class="p-3 bg-[#00ff88]/10 border-2 border-[#00ff88]/50 mb-6">
        <p class="text-[#00ff88] text-sm"><%= notice %></p>
      </div>
    <% end %>

    <h1 class="text-2xl uppercase tracking-wider text-[#00ff88] mb-6">Sign In</h1>

    <%= form_with url: session_url, class: "space-y-4" do |form| %>
      <div>
        <%= form.label :email_address, "Email", class: "block text-sm text-neutral-400 uppercase tracking-wide" %>
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "you@example.com", value: params[:email_address], class: "mt-1 w-full px-3 py-2 bg-neutral-800 text-neutral-200 border-2 border-neutral-700 focus:border-[#00ff88] focus:outline-none focus:shadow-[0_0_10px_rgba(0,255,136,0.3)] placeholder:text-neutral-600" %>
      </div>

      <div>
        <%= form.label :password, "Password", class: "block text-sm text-neutral-400 uppercase tracking-wide" %>
        <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "mt-1 w-full px-3 py-2 bg-neutral-800 text-neutral-200 border-2 border-neutral-700 focus:border-[#00ff88] focus:outline-none focus:shadow-[0_0_10px_rgba(0,255,136,0.3)]" %>
      </div>

      <div class="pt-2">
        <%= form.submit "Sign In", class: "px-4 py-2 bg-[#00ff88] hover:bg-[#00cc6a] text-black font-medium border-2 border-black shadow-[4px_4px_0_0_#000] hover:shadow-[2px_2px_0_0_#000] hover:translate-x-[2px] hover:translate-y-[2px] transition-all cursor-pointer uppercase tracking-wide" %>
      </div>
    <% end %>
  </div>
</div>
